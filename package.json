{
    "name": "vitt_notificator",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "prisma": {
        "schema": "./infrastructure/src/resources/prisma/schema.prisma"
    },
    "scripts": {
        "build": "nest build",
        "format": "prettier --write \\\"src/**/*.ts\\\" \\\"infrastructure/src/test/**/*.ts\\\"",
        "start": "nest start",
        "start:dev": "nest start --watch --path ./tsconfig.json",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "db:update": "npx prisma generate --schema=./infrastructure/src/resources/prisma/schema.prisma && npx prisma migrate dev",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config infrastructure/src/test/jest-e2e.json",
        "all:debug": "npm i && docker-compose up -d --build && npm run db:update && npm run start:debug",
        "all:dev": "npm i && docker-compose up -d --build && npm run test:e2e && npm run start:dev",
        "all:dev:no-tests": "npm i && docker-compose up -d --build && npm run db:update && npm run start:dev"
    },
    "dependencies": {
        "@nestjs/axios": "^3.0.0",
        "@nestjs/common": "^10.0.5",
        "@nestjs/config": "^3.0.0",
        "@nestjs/core": "^10.0.5",
        "@nestjs/jwt": "^10.1.0",
        "@nestjs/passport": "^10.0.0",
        "@nestjs/platform-express": "^10.0.0",
        "@nestjs/schedule": "^3.0.2",
        "@nestjs/serve-static": "^4.0.0",
        "@nestjs/swagger": "^7.1.12",
        "@prisma/client": "^5.2.0",
        "app-root-path": "^3.1.0",
        "axios": "^1.4.0",
        "bcryptjs": "^2.4.3",
        "date-fns": "^2.30.0",
        "fs-extra": "^11.1.1",
        "mongoose": "^7.3.2",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "sharp": "^0.32.4",
        "zod": "^3.23.4"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.0.0",
        "@nestjs/schematics": "^10.0.0",
        "@nestjs/testing": "^10.0.0",
        "@types/app-root-path": "^1.2.5",
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.17",
        "@types/fs-extra": "^11.0.1",
        "@types/jest": "^29.5.2",
        "@types/multer": "^1.4.7",
        "@types/node": "^20.3.1",
        "@types/passport-jwt": "^3.0.9",
        "@types/sharp": "^0.32.0",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.59.11",
        "@typescript-eslint/parser": "^5.59.11",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "prettier": "^2.8.8",
        "prisma": "^5.2.0",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-loader": "^9.4.3",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
